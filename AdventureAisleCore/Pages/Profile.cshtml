@page

@model AdventureAisleCore.Pages.AccountModel
@{
   
    
}
<body>
<link rel="stylesheet" href="~/css/profile.css" />
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    @if (!String.IsNullOrEmpty(@Model.Usr?.username))
                    {
                        <h3 class="dark-color">@Model.Usr.username</h3>
                    }
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                    @if(Model.Usr?.birthday != null)
                                    {
                                        <label>Birthday</label>
                                        <p>@Model.Usr?.birthday</p>
                                    }
                            </div>
                            <div class="media">
                                <label>Bio</label>
                                    <p>@Model.Usr?.Bio</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                    @if (!String.IsNullOrEmpty(@Model.Usr?.email))
                                    {
                                        <label>E-mail</label>
                                        <p>@Model.Usr.email</p>
                                    }
                            </div>
                                <div class="media">
                                    @if (@Model.Usr?.userSince != null)
                                    {
                                        <label>User since</label>
                                        <p>@Model.Usr?.userSince</p>
                                    }
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
        <div class="counter">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2"> 60 </h6>
                        <p class="m-0px font-w-600"> Destinations been</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2">150</h6>
                        <p class="m-0px font-w-600">Destinations going to</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="850" data-speed="850">20</h6>
                        <p class="m-0px font-w-600">Travel Lists</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="190" data-speed="190">190</h6>
                        <p class="m-0px font-w-600">Reviews</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
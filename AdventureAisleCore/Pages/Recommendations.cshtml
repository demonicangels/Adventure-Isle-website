@page
@model AdventureAisleCore.Pages.RecommendationsTestPageModel
@{
    if (TempData.ContainsKey("warning"))
    {
        <script>
            alert('@TempData["warning"]')
        </script>
    }
}
<div class="pageContent">
    <div class="recBy">
        <h1> Recommendations: </h1>
        <form method="post">
            <div class="recOptions">
                <input type="radio" name = "option" value="Climate">By climate
                <input type="radio" name = "option" value="Rating">By rating
                
                <input type="text" asp-for="WantedClimate"/>
            </div>
            <button type="submit">show recommendations</button>
        </form>
    </div>
    <div class="content-destinationCards">
        @for (int i = 0; i < Model.Recommendations.Count(); i++)
        {
            <div class="card">
    
                @if (!String.IsNullOrEmpty(Model.Recommendations[i].ImgURL))
                {
                    <a asp-page="/@Model.Recommendations[i].Name" asp-route-destination= "@Model.Recommendations[i].Name">
                        <img src="@Model.Recommendations[i].ImgURL" class="card-image">
                    </a>
                }
                else
                {
                    <a asp-page="/@Model.Recommendations[i].Name" asp-route-destination="@Model.Recommendations[i].Name">
                        <img src="~/images/temporarilyoutofservice.jpg" class="card-image">
                    </a>
                }
    
                <div class="cont">
    
                    <a asp-page="/@Model.Recommendations[i].Name" asp-route-destination="@Model.Recommendations[i].Name"><h4><b>@Model.Recommendations[i].Name</b></h4></a>
                    <p class="rating" style="margin-left: 240px;"> @Model.Recommendations[i].AvgRating</p>
                </div>
                <div class="review-score">
                    <p> Good </p>
                    <p>Climate: @Model.Recommendations[i].Climate</p>
                </div>
            </div>
        }
    
    </div>
</div>
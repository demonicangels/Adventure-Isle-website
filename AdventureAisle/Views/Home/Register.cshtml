@{
    @model AAClasslibrary.Entities.User
}
<link href="~/css/login.css" rel="stylesheet" type="text/css"/>
<form method="post">
 <div class="container">
    <label asp-for="username"><b>Username</b></label>
    <input asp-for="username" placeholder="Enter Username" name="username" required>

    <label asp-for="password"><b>Password</b></label>
        <input asp-for="password" class="pass" type="password" placeholder="Enter Password" name="psw" required>

        <button asp-controller="Home" asp-action="LoginFormValidate" type="submit" value="Login">Register</button>
</div>
</form>